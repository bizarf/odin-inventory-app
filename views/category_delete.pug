extends layout

block content
  h1 #{title}: #{category.name}
  
  if category_products.length

    p Please delete the following products first if you wish to delete this category. 

      h4 Products
      ul 
        each product in category_products
          li
            a(href=product.url) #{product.name}

  else
    p Are you sure that you want to delete this category?

    form(action="", method="post" class="creationForm") 
      label(for="password") Password (minimum 8 characters):
      input(type="password", name="password")
      input(type="hidden", name="categoryId", required="true", value=category._id)
      div(class="submitBtn-div")
        input(type="submit", value="Delete" class="submitBtn")

    if errors
      ul
        for error in errors
          li!= error.msg